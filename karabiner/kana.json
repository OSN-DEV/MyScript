{
  "title": "独自キー",
  "rules": [
    {
      "description": "かなコンビネーション ver2022.11.26" ,
      "manipulators": [
        {
            "description": "かなをファンクションキー化",
            "type": "basic",
            "from": { "key_code": "japanese_kana"},
            "to": [{"set_variable": {"name":"kana_key", "value":1}}],
            "to_if_alone": [{"key_code": "japanese_kana"}],
            "to_after_key_up": [{"set_variable": {"name":"kana_key", "value":0}}],
            "conditions":[{"type":"variable_if", "name": "kana_key", "value": 0}]
        },
        {
            "description": "Kana + Q => 1",
            "type": "basic",
